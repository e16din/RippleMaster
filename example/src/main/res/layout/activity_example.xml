<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#caa"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="48dp"
    tools:context=".ExampleActivity">


    <ImageView
        android:id="@+id/vLeftImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/vCenterImage"
        android:contentDescription="@string/app_name"
        android:padding="8dp"
        android:src="@mipmap/ic_launcher"/>

    <ImageView
        android:id="@+id/vCenterImage"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        android:padding="16dp"
        android:src="@mipmap/ic_launcher"/>

    <ImageView
        android:id="@+id/vRightImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/vCenterImage"
        android:contentDescription="@string/app_name"
        android:padding="8dp"
        android:src="@mipmap/ic_launcher"/>

    <com.e16din.ripplemaster.RippleWrapperLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_alignParentBottom="true"
        app:color="@color/colorPrimary">

        <TextView android:id="@+id/vHelloLabel"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:text="Hello World!"/>

    </com.e16din.ripplemaster.RippleWrapperLayout>

    <Button android:id="@+id/vPushMeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Push Me"/>

</RelativeLayout>
